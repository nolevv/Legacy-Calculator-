<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Legacy Calculator</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-transparent text-white min-h-screen flex items-center justify-center">

  <!-- Calculator Page -->
  <div id="calculatorPage" class="backdrop-blur-xl bg-white/10 p-6 rounded-2xl shadow-2xl w-[560px]">
    <h1 class="text-xl font-bold mb-4 text-center">Legacy Calculator</h1>

    <input id="display" type="text" readonly
      class="w-full mb-4 p-3 text-right text-3xl rounded-xl bg-black/70 text-green-400" />

    <div class="grid grid-cols-5 gap-3 text-base">
      <button onclick="setMode('DEG')" class="btn">Deg</button>
      <button onclick="setMode('RAD')" class="btn">Rad</button>
      <button onclick="factorial()" class="btn">x!</button>
      <button onclick="press('(')" class="btn">(</button>
      <button onclick="press(')')" class="btn">)</button>

      <button onclick="press('%')" class="btn">%</button>
      <button onclick="clearDisplay()" class="btn bg-red-500 hover:bg-red-600">AC</button>
      <button onclick="inverseToggle()" class="btn">Inv</button>
      <button onclick="trig('sin')" class="btn">sin</button>
      <button onclick="trig('ln')" class="btn">ln</button>

      <button onclick="press(Math.PI)" class="btn">π</button>
      <button onclick="trig('cos')" class="btn">cos</button>
      <button onclick="trig('log')" class="btn">log</button>
      <button onclick="press('7')" class="btn">7</button>
      <button onclick="press('8')" class="btn">8</button>

      <button onclick="press(Math.E)" class="btn">e</button>
      <button onclick="trig('tan')" class="btn">tan</button>
      <button onclick="sqrt()" class="btn">√</button>
      <button onclick="press('4')" class="btn">4</button>
      <button onclick="press('5')" class="btn">5</button>

      <button onclick="press('Ans')" class="btn">Ans</button>
      <button onclick="press('**')" class="btn">xʸ</button>
      <button onclick="press('1')" class="btn">1</button>
      <button onclick="press('2')" class="btn">2</button>
      <button onclick="press('3')" class="btn">3</button>

      <button onclick="press('0')" class="btn">0</button>
      <button onclick="press('.')" class="btn">.</button>
      <button onclick="press('+')" class="btn">+</button>
      <button onclick="press('-')" class="btn">−</button>
      <button onclick="calculate()" class="btn bg-green-500 hover:bg-green-600">=</button>
    </div>

    <button id="codeModBtn" class="mt-5 w-full bg-purple-600 hover:bg-purple-700 py-2 rounded-xl font-semibold">
      Code Mod
    </button>
  </div>

  <!-- Code Mod Page -->
  <div id="codeModPage" class="hidden text-center">
    <div class="backdrop-blur-xl bg-white/10 p-8 rounded-2xl shadow-2xl">
      <h1 class="text-3xl font-bold mb-4">Code Mod</h1>
      <p class="text-gray-200 mb-6">You unlocked the secret page.</p>
      <button onclick="goBack()" class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-xl">Back</button>
    </div>
  </div>

  <style>
    .btn { @apply bg-gray-700/80 hover:bg-gray-600 py-4 rounded-xl font-semibold; }
  </style>

  <script>
    const display = document.getElementById('display');
    const codeBtn = document.getElementById('codeModBtn');

    let inputHistory = '';
    let lastAnswer = 0;
    let mode = 'DEG';
    let inverse = false;
    let codeModActive = false; // NEW

    function press(value) {
      if (value === 'Ans') {
        display.value += lastAnswer;
        inputHistory += lastAnswer;
      } else {
        display.value += value;
        inputHistory += value;
      }

      // Only check code when activated
      if (codeModActive && inputHistory.endsWith('0000')) {
        openCodeMod();
      }

      if (inputHistory.length > 12) inputHistory = inputHistory.slice(-12);
    }

    function clearDisplay() {
      display.value = '';
      inputHistory = '';
    }

    function calculate() {
      try {
        lastAnswer = eval(display.value);
        display.value = lastAnswer;
      } catch {
        display.value = 'Error';
      }
    }

    function sqrt() {
      try { display.value = Math.sqrt(eval(display.value)); }
      catch { display.value = 'Error'; }
    }

    function factorial() {
      try {
        let n = eval(display.value);
        if (n < 0) return display.value = 'Error';
        let res = 1;
        for (let i = 2; i <= n; i++) res *= i;
        display.value = res;
      } catch { display.value = 'Error'; }
    }

    function trig(type) {
      try {
        let val = eval(display.value);
        if (mode === 'DEG') val = val * Math.PI / 180;

        let result;
        if (type === 'sin') result = inverse ? Math.asin(val) : Math.sin(val);
        if (type === 'cos') result = inverse ? Math.acos(val) : Math.cos(val);
        if (type === 'tan') result = inverse ? Math.atan(val) : Math.tan(val);
        if (type === 'ln') result = Math.log(val);
        if (type === 'log') result = Math.log10(val);

        display.value = result;
      } catch { display.value = 'Error'; }
    }

    function setMode(m) { mode = m; }
    function inverseToggle() { inverse = !inverse; }

    function openCodeMod() {
      // Redirect entire page to provided URL
      // Switch the current browser tab to the target site
      window.location.replace('https://sites.google.com/mysbisd.org/legacy-calculator/assessment');
    }

    function goBack() {
      document.getElementById('codeModPage').classList.add('hidden');
      document.getElementById('calculatorPage').classList.remove('hidden');
      clearDisplay();
    }

    // Toggle button behavior
    codeBtn.addEventListener('click', () => {
      codeModActive = !codeModActive;
      inputHistory = '';

      if (codeModActive) {
        codeBtn.textContent = 'Code Mod Activated';
        codeBtn.classList.remove('bg-purple-600');
        codeBtn.classList.add('bg-green-600');
      } else {
        codeBtn.textContent = 'Code Mod';
        codeBtn.classList.remove('bg-green-600');
        codeBtn.classList.add('bg-purple-600');
      }
    });

    // Keyboard support
    document.addEventListener('keydown', (e) => {
      const key = e.key;
      if (!isNaN(key) || ['+', '-', '*', '/', '.', '(', ')'].includes(key)) {
        press(key);
      }
      if (key === 'Enter') calculate();
      if (key === 'Backspace') display.value = display.value.slice(0, -1);
      if (key.toLowerCase() === 'c') clearDisplay();
    });
  </script>

</body>
</html>
